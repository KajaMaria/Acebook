<% provide(:title, @user.name) %>
  <div class="container">
    <div class="row center user-picture">

        <section class="user_info">
          <h1 class="center lefter">
            <%= image_tag(@user.avatar) %>
            <%= @user.name %>
          </h1>
        </section>

    </div>
  </div>

  <div class="center">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= @user.password %>
  </p>

  <%= link_to 'Edit', edit_user_path(@user) %>
  |
  <%= link_to 'Back', users_path %>
  </div>
